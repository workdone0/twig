<script>
    // Hero Typewriter Cycler
    const words = ["Inspect.", "Navigate.", "Understand."];
    const element = document.querySelector(".typing-words");
    const cursor = document.querySelector(".cursor") as HTMLElement;
    
    let wordIndex = 0;
    let charIndex = 0;
    let isDeleting = false;
    let typeSpeed = 100;
    
    function type() {
        if (!element) return;
        
        const currentWord = words[wordIndex];
        
        if (isDeleting) {
            element.innerHTML = currentWord.substring(0, charIndex - 1);
            charIndex--;
            typeSpeed = 50; // Faster deletion
        } else {
            element.innerHTML = currentWord.substring(0, charIndex + 1);
            charIndex++;
            typeSpeed = 100; // Normal typing
        }
        
        if (!isDeleting && charIndex === currentWord.length) {
            // Finished typing word
            isDeleting = true;
            typeSpeed = 2000; // Pause at end
        } else if (isDeleting && charIndex === 0) {
            // Finished deleting
            isDeleting = false;
            wordIndex++;
            // Loop back to start
            if (wordIndex >= words.length) {
                wordIndex = 0;
            }
            typeSpeed = 500; // Pause before next word
        }
        
        setTimeout(type, typeSpeed);
    }
    
    // Start after load
    setTimeout(type, 500);

    // Hero Copy Button
    const heroBtn = document.getElementById('hero-copy-btn');
    heroBtn?.addEventListener('click', async () => {
        await navigator.clipboard.writeText('pipx install twg');
        const original = heroBtn.textContent;
        heroBtn.textContent = 'Copied!';
        setTimeout(() => heroBtn.textContent = original, 2000);
    });
</script>

<style>
    .hero {
        text-align: center;
        padding: 6rem 0 3rem;
        max-width: 800px;
        margin: 0 auto;
    }
    
    .typing-header {
        font-size: 3.5rem;
        margin-bottom: 1.5rem;
        min-height: 1.2em;
    }
    
    .cursor {
        display: inline-block;
        width: 3px;
        height: 0.9em;
        background-color: var(--accent-color);
        margin-left: 6px;
        vertical-align: baseline;
        animation: solid 1s infinite;
    }
    @keyframes blink { 50% { opacity: 0; } }
    @keyframes solid { 0% { opacity: 1; } 100% { opacity: 1; } }

    .tagline {
        font-size: 1.25rem;
        color: var(--text-secondary);
        max-width: 600px;
        margin: 0 auto 2.5rem;
    }

    .install-block {
        display: inline-flex;
        align-items: center;
        background: var(--bg-surface);
        border: 1px solid var(--border-color);
        padding: 0.75rem 1.25rem;
        border-radius: 8px;
        gap: 1rem;
        font-family: var(--font-mono);
        font-size: 0.95rem;
    }
    .cmd { color: var(--accent-color); }
    .copy-btn {
        background: none;
        border: none;
        color: var(--text-secondary);
        cursor: pointer;
        padding: 2px 6px;
        font-size: 0.8rem;
        border-radius: 4px;
        transition: all 0.2s;
    }
    .copy-btn:hover { background: var(--border-color); color: var(--text-primary); }

    /* Terminal Demo - High Fidelity */
    .demo {
        margin: 5rem 0;
        opacity: 0;
        animation: fadeInUp 0.8s ease-out forwards;
        animation-delay: 0.2s;
    }
    .terminal-frame {
        border: 1px solid var(--border-color);
        border-radius: 12px; /* Smoother corners */
        overflow: hidden;
        background: #1e1e2e; /* Catppuccin Base */
        box-shadow: 
            0 0 0 1px rgba(0,0,0,0.2),
            0 20px 50px -10px rgba(0,0,0,0.5);
        transition: transform 0.4s ease, box-shadow 0.4s ease;
    }
    .terminal-frame:hover {
        transform: translateY(-4px);
        box-shadow: 
            0 0 0 1px var(--accent-color),
            0 30px 60px -15px rgba(0,0,0,0.6);
        border-color: var(--accent-color);
    }

    .frame-header {
        background: #181825; /* Catppuccin Mantle */
        padding: 12px 16px;
        display: flex;
        align-items: center;
        gap: 8px;
        border-bottom: 1px solid var(--border-color);
    }
    .frame-header .title {
        margin-left: auto;
        color: var(--text-secondary);
        font-family: var(--font-mono);
        font-size: 0.8rem;
        opacity: 0.8;
    }
    /* Mac Buttons */
    .dot { width: 12px; height: 12px; border-radius: 50%; }
    .dot:nth-child(1) { background: #ed8796; } /* Red */
    .dot:nth-child(2) { background: #eed49f; } /* Yellow */
    .dot:nth-child(3) { background: #a6da95; } /* Green */
    
    img { display: block; width: 100%; opacity: 1; }

    /* Symmetrical Grid: 2 columns max to prevent orphans */
    .grid-layout {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
        max-width: 900px; /* Constrain width to force 2x2 */
        margin: 6rem auto;
        gap: 2rem;
    }
    
    .feature {
        opacity: 0;
        animation: fadeInUp 0.8s ease-out forwards;
        background: transparent;
        padding: 1.5rem;
        border-radius: 12px;
        border: 1px solid transparent;
        transition: all 0.3s ease;
    }
    .feature:hover {
        background: var(--bg-surface);
        border-color: var(--border-color);
        transform: translateY(-4px);
        box-shadow: 0 10px 30px -10px rgba(0,0,0,0.1);
    }
    .feature:nth-child(1) { animation-delay: 0.4s; }
    .feature:nth-child(2) { animation-delay: 0.5s; }
    .feature:nth-child(3) { animation-delay: 0.6s; }
    .feature:nth-child(4) { animation-delay: 0.7s; }
    
    .feature h3 { 
        font-family: var(--font-mono); 
        font-size: 1.1rem; 
        margin-bottom: 0.75rem; 
        color: var(--text-primary); 
    }
    .feature h3::before {
        content: '/ ';
        color: var(--accent-color);
        opacity: 0.7;
    }
    .feature p { margin: 0; font-size: 0.95rem; }

    @keyframes fadeInUp {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }

    /* Tables & Metrics Section */
    .tables-section {
        display: flex;
        flex-wrap: wrap;
        gap: 3rem;
        justify-content: center;
        align-items: stretch;
        margin: 8rem 0;
    }
    
    .table-container, .metrics-container {
        flex: 1;
        min-width: 340px;
        background: var(--bg-surface);
        padding: 2.5rem;
        border-radius: 16px;
        border: 1px solid var(--border-color);
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05);
    }

    .table-container h2, .metrics-container h2 {
        font-family: var(--font-mono);
        color: var(--text-primary);
        font-size: 1.25rem;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
    .table-container h2::before, .metrics-container h2::before {
        content: '#';
        color: var(--accent-color);
    }

    /* Metrics Stlyes */
    .metrics-grid {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        height: calc(100% - 3rem); /* Fill remaining space minus header */
        justify-content: center;
    }
    
    .metric-card {
        display: flex;
        align-items: center;
        gap: 1.5rem;
        padding: 1.25rem;
        background: var(--bg-primary); /* Inset look */
        border: 1px solid var(--border-color);
        border-radius: 12px;
        transition: transform 0.2s;
    }
    .metric-card:hover {
        transform: scale(1.02);
        border-color: var(--accent-color);
    }

    .metric-icon {
        font-size: 1.5rem;
        width: 40px;
        text-align: center;
    }
    .metric-value {
        font-family: var(--font-mono);
        font-weight: 600;
        font-size: 1.1rem;
        color: var(--text-primary);
        min-width: 80px;
    }
    .metric-label {
        color: var(--text-secondary);
        font-size: 0.9rem;
        margin-left: auto; /* Push to right */
    }

    /* Table Styles */
    table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        font-family: var(--font-mono);
        font-size: 0.9rem;
    }
    th, td {
        padding: 1rem;
        text-align: left;
        border-bottom: 1px solid var(--border-color);
        color: var(--text-secondary);
    }
    th {
        color: var(--text-primary);
        font-weight: 600;
        border-bottom: 2px solid var(--border-color);
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }
    tr:last-child td { border-bottom: none; }
    td:first-child { color: var(--text-primary); font-weight: 500; }
</style>
