---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Twig - Terminal JSON & YAML Explorer">
    <main>
        <section class="hero">
            <h1 class="hero-header">
                A terminal-first<br />
                <span class="highlight">JSON & YAML</span> explorer
            </h1>
            <p class="tagline">
                Understand complex data locally ‚Äî fast, private, and
                SSH-friendly.
            </p>

            <div class="install-block primary">
                <span class="cmd">$ uv tool install twg</span>
                <button class="copy-btn" id="hero-copy-btn">Copy</button>
            </div>

            <div class="hero-links">
                <a
                    href="https://github.com/workdone0/twig"
                    class="secondary-link">View on GitHub</a
                >
            </div>
        </section>

        <section class="demo">
            <div class="terminal-frame">
                <div class="frame-header">
                    <span class="dot"></span><span class="dot"></span><span
                        class="dot"></span>
                    <span class="title">usr ‚Äî twig ‚Äî 120x40</span>
                </div>
                <!-- Using raw GitHub URL to ensure it loads without local assets -->
                <img
                    src="https://raw.githubusercontent.com/workdone0/twig/master/asset/demo.gif"
                    alt="Twig Demo - JSON and YAML Viewer"
                />
            </div>
        </section>

        <!-- SECTION: About Twig (The Narrative) -->
        <section class="about-section">
            <div class="about-container">
                <h2>The missing link in your terminal.</h2>
                <p>
                    <code>cat</code> floods your terminal. <code>jq</code> is powerful,
                    but not built for reading.
                </p>
                <p class="highlight-text">
                    Twig brings structure to your terminal. A zero-config,
                    interactive explorer for <strong>understanding</strong> JSON and
                    YAML at a glance.
                </p>
            </div>
        </section>

        <!-- SECTION: Feature Grid (Inspired by Reference) -->
        <section class="grid-section">
            <div class="features-grid">
                <!-- Card 1: JSON & YAML -->
                <div class="grid-card">
                    <div class="icon-box">üìÇ</div>
                    <h3>Multi-Format Native</h3>
                    <p>
                        First-class support for both JSON and YAML. Context
                        switch instantly.
                    </p>
                </div>

                <!-- Card 2: Deep Search -->
                <div class="grid-card">
                    <div class="icon-box">üîé</div>
                    <h3>Deep Search</h3>
                    <p>
                        Fuzzy search across keys and values. Type <code>/</code> to
                        jump deep.
                    </p>
                </div>

                <!-- Card 3: Fluid Nav -->
                <div class="grid-card">
                    <div class="icon-box">üß≠</div>
                    <h3>Fluid Navigation</h3>
                    <p>
                        Move through deep trees with Arrow Keys. Breadcrumbs
                        keep you oriented.
                    </p>
                </div>

                <!-- Card 4: Secure (Consolidated) -->
                <div class="grid-card">
                    <div class="icon-box">üîí</div>
                    <h3>Secure by Design</h3>
                    <p>
                        100% Local & Read-Only. Safely explore production
                        secrets.
                    </p>
                </div>

                <!-- Card 5: Instant Load -->
                <div class="grid-card">
                    <div class="icon-box">‚ö°Ô∏è</div>
                    <h3>Built for Speed</h3>
                    <p>
                        Instant load for files &lt;10MB. SQLite-backend for
                        larger datasets.
                    </p>
                </div>

                <!-- Card 6: Python (New) -->
                <div class="grid-card">
                    <div class="icon-box">üêç</div>
                    <h3>Python & Textual</h3>
                    <p>
                        Built on the modern Textual framework for a rich,
                        native-like TUI experience.
                    </p>
                </div>
            </div>
        </section>

        <!-- SECTION: Final Install -->
        <section class="final-cta">
            <h2>Ready to explore?</h2>
            <div class="install-block large">
                <span class="cmd">$ uv tool install twg</span>
                <button class="copy-btn" id="footer-copy-btn">Copy</button>
            </div>
        </section>
    </main>
</Layout>

<script>
    // Copy Logic
    function setupCopy(btnId: string, text: string) {
        const btn = document.getElementById(btnId);
        btn?.addEventListener("click", async () => {
            await navigator.clipboard.writeText(text);
            const original = btn.textContent;
            btn.textContent = "Copied!";
            btn.classList.add("copied");
            setTimeout(() => {
                if (original) btn.textContent = original;
                btn.classList.remove("copied");
            }, 2000);
        });
    }

    setupCopy("hero-copy-btn", "uv tool install twg");
    setupCopy("footer-copy-btn", "uv tool install twg");

    // Scroll Animation Observer
    const observer = new IntersectionObserver(
        (entries) => {
            entries.forEach((entry) => {
                if (entry.isIntersecting) {
                    entry.target.classList.add("visible");
                }
            });
        },
        { threshold: 0.1 },
    );

    document.querySelectorAll(".grid-card").forEach((card) => {
        observer.observe(card);
    });

    // Spotlight Effect
    const grid = document.querySelector(".features-grid") as HTMLElement;
    const cards = document.querySelectorAll(
        ".grid-card",
    ) as NodeListOf<HTMLElement>;

    if (grid) {
        grid.addEventListener("mousemove", (e) => {
            cards.forEach((card) => {
                const rect = card.getBoundingClientRect();
                const x = e.clientX - rect.left;
                const y = e.clientY - rect.top;
                card.style.setProperty("--mouse-x", `${x}px`);
                card.style.setProperty("--mouse-y", `${y}px`);
            });
        });
    }
</script>

<style>
    /* GLOBAL SPACING */
    section {
        margin-bottom: 8rem; /* Increased spacing */
        padding: 0 1rem;
    }

    /* HERO STYLES (Preserved) */
    .hero {
        text-align: center;
        padding: 6rem 0 3rem;
        max-width: 800px;
        margin: 0 auto 5rem;
    }
    .hero-header {
        font-size: 3rem;
        margin-bottom: 1.5rem;
        line-height: 1.1;
        font-weight: 700;
        letter-spacing: -0.03em;
    }
    .highlight {
        color: var(--accent-color);
        position: relative;
        display: inline-block;
    }
    .highlight::after {
        content: "";
        position: absolute;
        bottom: 4px;
        left: 0;
        width: 100%;
        height: 15%;
        background: var(--accent-color);
        opacity: 0.15;
        z-index: -1;
        border-radius: 4px;
        pointer-events: none;
    }
    @media (min-width: 768px) {
        .hero-header {
            font-size: 4.5rem;
        }
    }
    .tagline {
        font-size: 1.2rem;
        color: var(--text-secondary);
        max-width: 580px;
        margin: 0 auto 2.5rem;
        line-height: 1.6;
    }
    .hero-links {
        margin-top: 2rem;
    }
    .secondary-link {
        color: var(--text-secondary);
        font-size: 0.9rem;
        text-decoration: none;
        transition: color 0.2s;
    }
    .secondary-link:hover {
        color: var(--text-primary);
    }

    /* INSTALL BLOCK */
    .install-block {
        display: inline-flex;
        align-items: center;
        background: var(--bg-surface);
        border: 1px solid var(--border-color);
        padding: 0.75rem 1.25rem;
        border-radius: 99px; /* Pill shape */
        gap: 1rem;
        font-family: var(--font-mono);
        font-size: 0.95rem;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
        transition:
            transform 0.2s,
            box-shadow 0.2s;
    }
    .install-block:hover {
        transform: translateY(-1px);
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.3);
        border-color: var(--border-focus);
    }
    .install-block.large {
        padding: 1rem 2rem;
        font-size: 1.1rem;
    }
    .cmd {
        color: var(--text-primary);
        font-weight: 500;
    }
    .copy-btn {
        background: var(--bg-secondary);
        border: 1px solid var(--border-color);
        color: var(--text-secondary);
        cursor: pointer;
        padding: 4px 10px;
        font-size: 0.75rem;
        border-radius: 12px;
        transition: all 0.2s;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        font-weight: 600;
    }
    .copy-btn:hover {
        color: var(--text-primary);
        background: var(--bg-primary);
    }
    .copy-btn.copied {
        background: var(--accent-color);
        color: var(--bg-surface);
        border-color: var(--accent-color);
    }

    /* DEMO */
    .demo {
        margin: 0 auto 8rem;
        max-width: 1000px;
        position: relative;
    }
    /* Glow behind demo */
    .demo::after {
        content: "";
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 80%;
        height: 80%;
        background: var(--accent-color);
        opacity: 0.05;
        filter: blur(100px);
        z-index: -1;
    }
    .terminal-frame {
        border: 1px solid var(--border-color);
        border-radius: 12px;
        overflow: hidden;
        background: #1e1e2e;
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
    }
    .frame-header {
        background: #181825;
        padding: 12px 16px;
        display: flex;
        align-items: center;
        gap: 8px;
        border-bottom: 1px solid #313244;
    }
    .title {
        margin-left: auto;
        color: #a6adc8;
        font-family: var(--font-mono);
        font-size: 0.8rem;
        opacity: 0.6;
    }
    .dot {
        width: 10px;
        height: 10px;
        border-radius: 50%;
    }
    .dot.red {
        background: #ed8796;
    }
    .dot.yellow {
        background: #eed49f;
    }
    .dot.green {
        background: #a6da95;
    }
    img {
        display: block;
        width: 100%;
    }

    /* FEATURE GRID NEW */
    .grid-section {
        max-width: 1100px;
        margin: 0 auto 8rem;
        padding: 0 1rem;
    }
    .features-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 1.5rem;
    }
    @media (max-width: 900px) {
        .features-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }
    @media (max-width: 600px) {
        .features-grid {
            grid-template-columns: 1fr;
        }
    }

    .grid-card {
        background: var(--bg-surface);
        border: 1px solid var(--border-color);
        border-radius: 12px;
        padding: 2rem;
        transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        opacity: 0;
        transform: translateY(20px);
        position: relative; /* For spotlight */
        overflow: hidden; /* For spotlight */
    }
    .grid-card::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: radial-gradient(
            800px circle at var(--mouse-x) var(--mouse-y),
            rgba(255, 255, 255, 0.04),
            transparent 40%
        );
        z-index: 1;
        opacity: 0;
        transition: opacity 0.5s;
        pointer-events: none;
    }
    .features-grid:hover .grid-card::before {
        opacity: 1;
    }
    .grid-card > * {
        position: relative;
        z-index: 2;
    }

    .grid-card.visible {
        opacity: 1;
        transform: translateY(0);
    }
    /* Stagger delays */
    .grid-card:nth-child(1) {
        transition-delay: 0ms;
    }
    .grid-card:nth-child(2) {
        transition-delay: 50ms;
    }
    .grid-card:nth-child(3) {
        transition-delay: 100ms;
    }
    .grid-card:nth-child(4) {
        transition-delay: 150ms;
    }
    .grid-card:nth-child(5) {
        transition-delay: 200ms;
    }
    .grid-card:nth-child(6) {
        transition-delay: 250ms;
    }

    .grid-card:hover {
        border-color: var(--border-focus);
        transform: translateY(-5px);
        box-shadow: 0 10px 30px -10px rgba(0, 0, 0, 0.5);
    }

    .icon-box {
        width: 40px;
        height: 40px;
        background: var(--bg-secondary);
        border: 1px solid var(--border-color);
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.25rem;
        margin-bottom: 1.5rem;
    }

    .grid-card h3 {
        font-size: 1.1rem;
        font-weight: 600;
        margin: 0 0 0.75rem 0;
        color: var(--text-primary);
    }

    .grid-card p {
        font-size: 0.95rem;
        color: var(--text-secondary);
        line-height: 1.6;
        margin: 0;
    }
    .grid-card code {
        background: var(--bg-primary);
        padding: 2px 6px;
        border-radius: 4px;
        font-size: 0.85em;
        border: 1px solid var(--border-color);
    }

    /* FINAL CTA */
    .final-cta {
        text-align: center;
        margin-bottom: 6rem;
    }
    .final-cta h2 {
        margin-bottom: 2rem;
        font-size: 2rem;
        letter-spacing: -0.02em;
    }

    /* RESPONSIVE */
    @media (max-width: 768px) {
        .typing-header {
            font-size: 1.8rem;
        }
        .hero {
            padding-top: 2rem;
        }
        .why-grid {
            /* This rule is now unused but kept for fidelity to original */
            grid-template-columns: 1fr;
            gap: 2rem;
        }
        .feature-grid {
            /* This rule is now unused but kept for fidelity to original */
            grid-template-columns: 1fr;
        }
        .install-block {
            width: 100%;
            justify-content: space-between;
        }
    }
    /* ABOUT SECTION SIMPLIFIED */
    .about-section {
        margin-bottom: 8rem;
        padding: 0 1rem;
        text-align: center;
    }
    .about-container {
        max-width: 700px;
        margin: 0 auto;
    }
    .about-section h2 {
        font-size: 3rem;
        font-weight: 700;
        margin-bottom: 2.5rem;
        letter-spacing: -0.03em;
        line-height: 1.1;

        /* Green Gradient Feature */
        background: linear-gradient(
            to right,
            var(--accent-color),
            var(--text-primary)
        );
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }
    .about-section p {
        font-size: 1.25rem;
        line-height: 1.7;
        color: var(--text-secondary);
        margin-bottom: 1.5rem;
    }
    .about-section .highlight-text {
        font-size: 1.35rem;
        color: var(--text-primary);
        font-weight: 500;
        margin-top: 2rem;
    }
    .about-section code {
        background: var(--bg-surface);
        border: 1px solid var(--border-color);
        padding: 2px 6px;
        border-radius: 4px;
        font-size: 0.9em;
        color: var(--text-primary);
        font-family: var(--font-mono);
    }
    .about-section strong {
        color: var(--accent-color);
        font-weight: 600;
    }

    @media (max-width: 768px) {
        .about-section h2 {
            font-size: 2rem;
            margin-bottom: 2rem;
        }
        .about-section p {
            font-size: 1.1rem;
            line-height: 1.6;
        }
    }
</style>
